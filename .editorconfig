# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = double
max_line_length = off

[*.{json,yaml,yml}]
insert_final_newline = false

[*.{yaml,yml}]
indent_style = space
indent_size = 2
